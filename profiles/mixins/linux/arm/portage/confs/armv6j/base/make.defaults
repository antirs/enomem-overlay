ABI="arm"

CPU_FLAGS_ARM="-*"

EN_CFLAGS_COMMON_ARCH_ARM_MARM="-marm"
EN_CFLAGS_COMMON_ARCH_ARM_MTHUBM="-mthumb"
EN_CFLAGS_COMPILER_FPU_ABI_ARM_HF="-mfloat-abi=hard"
