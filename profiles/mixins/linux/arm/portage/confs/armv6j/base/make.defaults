EN_CFLAGS_COMPILER_FPU_ARM_VFP="-mfpu=vfp"
EN_CFLAGS_CPU_ARCH_ARM_ARM="-march=arm"
EN_CFLAGS_CPU_ARCH_ARM_ARMV6J="-march=armv6j"
EN_CFLAGS_CPU_ARCH_ARM_RAPI_ZEROW="-mcpu=arm1176jzf-s"

EN_CPU_FLAGS_ARM_ARMV6J="v4 v5 v6 edsp thumb vfp"

CPU_FLAGS_ARM="${EN_CPU_FLAGS_ARM_ARMV6J}
